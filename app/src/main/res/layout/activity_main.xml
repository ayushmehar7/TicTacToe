<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.5"
    tools:context="com.example.mehar.tic_tac_toe.MainActivity">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="358dp"
        android:layout_height="358dp"
        android:layout_marginBottom="69dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="69dp"
        android:alpha="1"
        android:background="@drawable/grid"
        android:columnCount="3"
        android:rowCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/cross11"
            android:layout_width="111dp"
            android:layout_height="111dp"
            android:alpha="0"
            android:onClick="Click"
            android:tag="1"
            app:srcCompat="@drawable/cross" />


        <ImageView
            android:id="@+id/cross12"
            android:layout_width="111dp"
            android:layout_height="111dp"
            android:layout_marginLeft="15dp"
            android:alpha="0"
            android:onClick="Click"
            android:tag="2"
            app:srcCompat="@drawable/cross" />

        <ImageView
            android:id="@+id/cross13"
            android:layout_width="111dp"
            android:layout_height="111dp"
            android:layout_marginLeft="15dp"
            android:alpha="0"
            android:onClick="Click"
            android:tag="3"
            app:srcCompat="@drawable/cross" />

        <ImageView
            android:id="@+id/cross21"
            android:layout_width="111dp"
            android:layout_height="111dp"
            android:layout_marginTop="15dp"
            android:alpha="0"
            android:onClick="Click"
            android:tag="4"
            app:srcCompat="@drawable/cross" />

        <ImageView
            android:id="@+id/cross22"
            android:layout_width="111dp"
            android:layout_height="111dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:alpha="0"
            android:onClick="Click"
            android:tag="5"
            app:srcCompat="@drawable/cross" />

        <ImageView
            android:id="@+id/cross23"
            android:layout_width="111dp"
            android:layout_height="111dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:alpha="0"
            android:onClick="Click"
            android:tag="6"
            app:srcCompat="@drawable/cross" />

        <ImageView
            android:id="@+id/cross31"
            android:layout_width="111dp"
            android:layout_height="111dp"
            android:layout_marginTop="5dp"
            android:alpha="0"
            android:onClick="Click"
            android:tag="7"
            app:srcCompat="@drawable/cross" />

        <ImageView
            android:id="@+id/cross32"
            android:layout_width="111dp"
            android:layout_height="111dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:alpha="0"
            android:onClick="Click"
            android:tag="8"
            app:srcCompat="@drawable/cross" />

        <ImageView
            android:id="@+id/cross33"
            android:layout_width="111dp"
            android:layout_height="111dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:alpha="0"
            android:onClick="Click"
            android:tag="9"
            app:srcCompat="@drawable/cross" />


    </GridLayout>

    <TextView
        android:id="@+id/WinnertextView"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginBottom="42dp"
        android:layout_marginEnd="163dp"
        android:layout_marginStart="163dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="sans"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="148dp"
        android:layout_marginStart="148dp"
        android:layout_marginTop="12dp"
        android:elevation="0dp"
        android:onClick="playAgain"
        android:text="PLAY AGAIN"
        android:textAlignment="center"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />
</android.support.constraint.ConstraintLayout>
